{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "target": "es5",
    "module": "es6",
    "sourceMap": true,
    "jsx": "react",
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom", "es2017.object"],
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@common": ["components/common"],
      "@common/*": ["components/common/*"],
      "@components/*": ["components/*"],
      "@constants": ["constants"],
      "@constants/*": ["constants/*"],
      "@pages": ["pages"],
      "@pages/*": ["pages/*"],
      "@routes/*": ["routes/*"],
      "@utils": ["utils/index"],
      "@utils/*": ["utils/*"],
      "@hooks": ["hooks"],
      "@hooks/*": ["hooks/*"],
      "@styles": ["styles"],
      "@styles/*": ["styles/*"],
      "@src/*": ["./*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "!node_modules/@types"]
}
