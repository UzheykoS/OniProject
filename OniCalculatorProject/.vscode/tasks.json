{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"suppressTaskName": true,
	"args": [
		"--display-modules",
		"--progress",
		"--colors"
	],
	"windows": {
		"command": "npm.cmd"
	},
	"showOutput": "always",
	"tasks": [
		{
			// Build task, Ctrl+Shift+B
			// "npm install --loglevel info"
			"taskName": "install",
			"isBuildCommand": true,
			"args": [
				"install",
				"--loglevel",
				"info"
			]
		},
		{
			"args": ["run-script", "webpack-watch"],
			"taskName": "webpack_watch"
		},
		{
			"args": [
				"run",
				"webpack_dev"
			],
			"isBuildCommand": true,
			"taskName": "webpack_single"
		}
	]
}